<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/recycler_view"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo_appps4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Pensamento Computacional"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="28 de Agosto de 2019"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_more"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_more_vert_black_24dp"
            android:foregroundGravity="center"
            android:gravity="center"
            app:backgroundTint="@color/colorAccent" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:maxLength="150"
        android:paddingLeft="8sp"
        android:paddingBottom="8sp"
        android:text="Projeto de extensão criado na UFPB - Campus IV (Rio Tinto), com o propósito de estimular o pensamento computacional em meninas do ensino fundamental."
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_more_text"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="55dp"
        android:layout_height="23dp"
        android:layout_gravity="center|left"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="mais ..."
        android:textColor="@color/textColorNameFeed"
        android:textSize="12sp"
        app:backgroundTint="@color/colorAccent" />

    <ImageView
        android:id="@+id/image_post"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ufpb_campus_iv" />
</LinearLayout>